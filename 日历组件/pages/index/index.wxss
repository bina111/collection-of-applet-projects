.calendar{
  background-color: white;
  width: 90%;
  margin: auto;
  border: 1px solid #8BC34A;
  border-radius: 15rpx;
}

.date-show{
  position: relative;
  width: 250rpx;
  font-family: PingFang-SC-Regular;
  font-size: 40rpx;
  color: #282828;
  text-align: center;
  margin: 20rpx auto 10rpx;
}

.lt-arrow,.rt-arrow{
  position: absolute;
  top: 5rpx;
  width: 60rpx;
  height: 60rpx;
}

.lt-arrow image,.rt-arrow image{
  width: 50rpx;
  height: 50rpx;
}
.lt-arrow{
  left: -70rpx;
  transform: translate(-180deg);
}
.rt-arrow{
  right: -70rpx;
}

.date-header{
  font-size: 0;
  padding: 0 24rpx;
}

.date-header > view{
  display: inline-block;
  width: 14.285%;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 2px solid #D0D0D0;
  padding: 30rpx 0 20rpx;
}

.date-box{
  font-size: 0;
  padding: 0 24rpx;
}
.date-box>view{
  position: relative;
  display: inline-block;
  width: 14.285%;
  font-size: 40rpx;
  text-align: center;
  vertical-align: middle;
  margin: 10rpx 0;
}

.date-head{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}

.nowDay .date-head{
  width: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: white;
  background-color:  #8BC34A;
  margin: 0 auto;
}




